<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thomasjgrocerydelivery"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:name=".GlobalState"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name=".Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ViewCart"
            android:label="@string/title_activity_view_cart" >
        </activity>
        <activity
            android:name=".ReviewOrders"
            android:label="@string/title_activity_review_orders" >
        </activity>
        <activity
            android:name=".BrowseCategory"
            android:label="@string/title_activity_browse" >
        </activity>
        <activity
            android:name=".BrowseItem"
            android:label="@string/title_activity_browse_item" >
        </activity>
        <activity
            android:name=".ItemReview"
            android:label="@string/title_activity_item_review" >
        </activity>
        <activity
            android:name=".CartItemReview"
            android:label="@string/title_activity_cart_item_review" >
        </activity>
        <activity
            android:name=".Checkout"
            android:label="@string/title_activity_checkout" >
        </activity>
        <activity
            android:name=".OrderConfirmation"
            android:label="@string/title_activity_order_confirmation" >
        </activity>
        <activity
            android:name=".OrderReview"
            android:label="@string/title_activity_order_review" >
        </activity>
    </application>

</manifest>
